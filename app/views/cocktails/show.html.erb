<div class="container text-center">
  <h2><%= @cocktail.name %></h2>

  <h4>Recipe:</h4>
    <ul>
      <% @cocktail.doses.each do | dose | %>
        <li><%= dose.description %></li>
        <li><%= dose.ingredient.name %></li>
      <% end %>
    </ul>

  <p><%= link_to "Back to list", cocktails_path, class:"btn btn-success" %></p>
</div>
