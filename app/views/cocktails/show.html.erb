<div class="container text-center">
  <h2><%= @cocktail.name %></h2>

  <h4>Recipe:</h4>
    <ul>
       <% @cocktail.doses.each do | dose | %>
         <li><%= dose.description %> <%= dose.ingredient.name %><%= link_to dose,
         method: :delete, data: { confirm: "Are you sure?" } do %>
         <i class="far fa-trash-alt"></i>
         <% end %>
         </li>
         <% end %>
     </ul>

  <p><%= link_to "Add a new dose", new_cocktail_dose_path(@cocktail), class:"btn btn-success" %></p>

  <p><%= link_to cocktail_path(@cocktail), class: "btn btn-danger",
        method: :delete, data: { confirm: "Are you sure?" } do %>
          <i class="far fa-trash-alt"></i>
        <% end %>
  </p>

  <p><%= link_to "Back to list", cocktails_path, class:"btn btn-success" %></p>

</div>

